@model TheBugTracker.Models.ViewModels.AssignDeveloperViewModel

<div class="container">
    <h2>Assign Developer for</h2>
    <div class="row">

        <div class="col-md-6">

            <h3>@Model.Ticket.Title</h3>
            <a style="font-size:small" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>

            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign Developer</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input asp-for="Ticket.Id" hidden />
                        <p>Description: @Model.Ticket.Description</p>

                        <div class="form-group">
                            <label class="col-form-label">Select Developers</label>

                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assign" class="btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
    </div>

</div>